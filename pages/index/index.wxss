@import '../../common/css/list.wxss';

.header {
  height: 92rpx;
  background: #181818;
}
.city {
  float: left;
  width: 142rpx;
  color: #d3b9a0;
  font-size: 29rpx;
  line-height: 92rpx;
  text-align: center;
}
.city:after {
  content: '';
  display: inline-block;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
  margin-left: 10rpx;
  border-width: 10rpx 10rpx 0;
  border-style: solid;
  border-color: #d3b9a0 transparent transparent;
}
.userinfo {
  float: right;
  margin-top: 23rpx;
  margin-right: 30rpx;
  width: 48rpx;
  height: 48rpx;
}
.userinfo image {
  width: 100%;
  height: 100%;
}
.nav-list {
  display: flex;
  height: 200rpx;
  text-align: center;
  background: #fff;
}
.nav-list navigator {
  flex: 1;
  margin: auto;
}
.nav-list image {
  width: 87.5rpx;
  height: 87.5rpx;
}
.nav-list text {
  display: block;
  font-size: 26rpx;
  line-height: 51rpx;
}
.hot {
  margin-top: 20rpx;
  background: #fff;
}
.hot-title {
  padding-left: 30rpx;
  color: #777;
  font: 30rpx/80rpx '宋体';
}
