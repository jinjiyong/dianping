@import '../../common/css/font.wxss';

.userinfo {
  border-bottom: 1px solid #ddd;
  padding: 30rpx;
  background: #fff;
}
.user-photo {
  display: block;
  margin: 30rpx auto;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
}
.user-text {
  color: #333;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
}
.user-text text {
  margin: 0 12rpx;
}
.collect navigator {
  display: block;
  position: relative;
  border-bottom: 1px solid #ddd;
  padding: 0 30rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 120rpx;
  background: #fff;
}
.collect navigator:after {
  position: absolute;
  top: 0;
  right: 30rpx;
  font-size: 30rpx;
  transform: rotate(-90deg);
}