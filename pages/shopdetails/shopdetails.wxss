@import '../../common/css/font.wxss';
@import '../../common/css/list.wxss';

.shop-details {
  background: #fff;
}
.list-item {
  padding: 30rpx;
}
.list-img {
  width: 238rpx;
  height: 179rpx;
}
.list-info {
  width: 417rpx;
}
.list-title {
  line-height: 40rpx;
}
.list-score, .list-price {
  line-height: 40rpx;
}
.shop-score {
  color: #999;
  font-size: 26rpx;
  line-height: 40rpx;
}
.list-position {
  line-height: 40rpx;
}
.shop-aside {
  position: relative;
  overflow: hidden;
  border-bottom: 1px solid #ddd; 
  padding: 30rpx 60rpx 30rpx 30rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}
.shop-aside:after {
  content:  '\e62d';
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -30rpx;
  color: #333;
  font-family:'iconfont' !important;
  transform: rotate(-90deg);
}
.shop-aside text {
  float: left;
  margin-right: 20rpx;
  color: #333;
}
.shop-aside text:before {
  margin-right: 10rpx;
  color: #999;
  font-size: 34rpx;
}
.shop-position {
  position: relative;
  padding: 30rpx 30rpx 30rpx 90rpx;
}
.shop-position:before {
  position: absolute;
  top: 50%;
  left: 30rpx;
  margin-top: -50rpx;
  font-size: 40rpx;
  line-height: 100rpx;
}
.shop-addr {
  margin-bottom: 10rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 40rpx;
}
.shop-distance {
  color: #999;
  font-size: 26rpx;
  line-height: 50rpx;
}